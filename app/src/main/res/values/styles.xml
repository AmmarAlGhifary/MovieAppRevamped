<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DetailLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailDarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SeeAllLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SeeAllDarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>